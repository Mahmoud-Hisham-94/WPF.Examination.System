<Window x:Class="ExaminationSys.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExaminationSys"
        mc:Ignorable="d"
        Title="Exam Results" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="ScoreTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="QuestionTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="AnswerTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style x:Key="CorrectAnswerStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style x:Key="WrongAnswerStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="20">
            <StackPanel>
                <TextBlock x:Name="ResultsTitleText" 
                          Text="Exam Results" 
                          Style="{StaticResource HeaderTextStyle}"
                          Foreground="White"/>
                <TextBlock x:Name="ExamTypeText" 
                          Text="Practice Exam" 
                          FontSize="16" 
                          Foreground="#E8F5E8" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Score Display -->
                <Border Background="#E8F5E8" 
                       BorderBrush="#4CAF50" 
                       BorderThickness="2" 
                       CornerRadius="8" 
                       Padding="30" 
                       Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Your Score" 
                                  FontSize="18" 
                                  Foreground="#2E7D32" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,10"/>
                        <TextBlock x:Name="ScoreText" 
                                  Text="15/20" 
                                  Style="{StaticResource ScoreTextStyle}"
                                  Foreground="#2E7D32"/>
                        <TextBlock x:Name="PercentageText" 
                                  Text="75%" 
                                  FontSize="20" 
                                  Foreground="#666" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Detailed Results -->
                <TextBlock Text="Detailed Results" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#333" 
                          Margin="0,0,0,15"/>
                
                <ItemsControl x:Name="ResultsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                   BorderBrush="#E0E0E0" 
                                   BorderThickness="1" 
                                   CornerRadius="4" 
                                   Padding="15" 
                                   Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding QuestionHeader}" 
                                              Style="{StaticResource QuestionTextStyle}"/>
                                    <TextBlock Text="{Binding QuestionBody}" 
                                              FontSize="12" 
                                              Foreground="#666" 
                                              TextWrapping="Wrap" 
                                              Margin="0,5,0,10"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Your Answer: " 
                                                  FontWeight="Bold" 
                                                  FontSize="12"/>
                                        <TextBlock Text="{Binding UserAnswer}" 
                                                  Style="{Binding AnswerStyle}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Correct Answer: " 
                                                  FontWeight="Bold" 
                                                  FontSize="12"/>
                                        <TextBlock Text="{Binding CorrectAnswer}" 
                                                  Style="{StaticResource CorrectAnswerStyle}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Marks: " 
                                                  FontWeight="Bold" 
                                                  FontSize="12"/>
                                        <TextBlock Text="{Binding MarksText}" 
                                                  FontSize="12" 
                                                  Foreground="#555"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Border Grid.Row="2" Background="#E8F5E8" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="CloseButton" 
                       Content="Close" 
                       Style="{StaticResource CloseButtonStyle}"
                       Click="CloseButton_Click"
                       Width="120"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
