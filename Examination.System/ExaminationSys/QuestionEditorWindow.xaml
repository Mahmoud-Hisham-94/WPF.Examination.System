<Window x:Class="ExaminationSys.QuestionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExaminationSys"
        mc:Ignorable="d"
        Title="Question Editor" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3d8b40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="20">
            <StackPanel>
                <TextBlock Text="📝 Question Editor" 
                          Style="{StaticResource HeaderTextStyle}"
                          Foreground="White"/>
                <TextBlock Text="Add or edit examination questions" 
                          FontSize="14" 
                          Foreground="#E8F5E8" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Question Type Selection -->
                <Border Background="White" 
                       BorderBrush="#E0E0E0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Question Type" 
                                  Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="QuestionTypeComboBox" 
                                 Style="{StaticResource ComboBoxStyle}"
                                 SelectionChanged="QuestionTypeComboBox_SelectionChanged">
                            <ComboBoxItem Content="True/False Question" Tag="TrueFalse"/>
                            <ComboBoxItem Content="Choose One Question" Tag="ChooseOne"/>
                            <ComboBoxItem Content="Choose All Question" Tag="ChooseAll"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Basic Question Information -->
                <Border Background="White" 
                       BorderBrush="#E0E0E0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Basic Information" 
                                  Style="{StaticResource LabelStyle}"/>
                        
                        <TextBlock Text="Question Header:" 
                                  Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="HeaderTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                Text="Enter question header..."/>
                        
                        <TextBlock Text="Question Body:" 
                                  Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="BodyTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="80"
                                Text="Enter question body..."/>
                        
                        <TextBlock Text="Marks:" 
                                  Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="MarksTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                Text="1"/>
                    </StackPanel>
                </Border>

                <!-- Choices Section (for ChooseOne and ChooseAll) -->
                <Border x:Name="ChoicesSection" 
                       Background="White" 
                       BorderBrush="#E0E0E0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,15"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Answer Choices" 
                                  Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="Enter each choice on a new line:" 
                                  FontSize="12" 
                                  Foreground="#666" 
                                  Margin="0,0,0,10"/>
                        <TextBox x:Name="ChoicesTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="100"
                                Text="Choice 1&#x0a;Choice 2&#x0a;Choice 3&#x0a;Choice 4"/>
                    </StackPanel>
                </Border>

                <!-- Correct Answer Section -->
                <Border Background="White" 
                       BorderBrush="#E0E0E0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="CorrectAnswerLabel" 
                                  Text="Correct Answer" 
                                  Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="CorrectAnswerHint" 
                                  Text="Select the correct answer:" 
                                  FontSize="12" 
                                  Foreground="#666" 
                                  Margin="0,0,0,10"/>
                        
                        <StackPanel x:Name="TrueFalseAnswers" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,10">
                            <RadioButton x:Name="TrueRadioButton" 
                                        Content="True" 
                                        FontSize="14" 
                                        Margin="0,0,20,0"/>
                            <RadioButton x:Name="FalseRadioButton" 
                                        Content="False" 
                                        FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel x:Name="ChooseOneAnswers" 
                                   Margin="0,0,0,10">
                            <!-- Radio buttons will be generated dynamically -->
                        </StackPanel>
                        
                        <StackPanel x:Name="ChooseAllAnswers" 
                                   Margin="0,0,0,10">
                            <!-- Checkboxes will be generated dynamically -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Exam Assignment -->
                <Border Background="White" 
                       BorderBrush="#E0E0E0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20">
                    <StackPanel>
                        <TextBlock Text="Assign to Exam" 
                                  Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox x:Name="PracticeExamCheckBox" 
                                     Content="Practice Exam" 
                                     FontSize="14" 
                                     Margin="0,0,20,0"
                                     IsChecked="True"/>
                            <CheckBox x:Name="FinalExamCheckBox" 
                                     Content="Final Exam" 
                                     FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#E8F5E8" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveButton" 
                       Content="💾 Save Question" 
                       Style="{StaticResource SuccessButtonStyle}"
                       Click="SaveButton_Click"/>
                
                <Button x:Name="PreviewButton" 
                       Content="👁️ Preview" 
                       Style="{StaticResource ActionButtonStyle}"
                       Click="PreviewButton_Click"/>
                
                <Button x:Name="CancelButton" 
                       Content="❌ Cancel" 
                       Style="{StaticResource ActionButtonStyle}"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

